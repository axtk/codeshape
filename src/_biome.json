{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "asNeeded",
            "bracketSpacing": false,
            "quoteStyle": "single"
        }
    },
    "linter": {
        "rules": {
            "style": {
                "useBlockStatements": "off",
                "useConst": "off"
            }
        }
    }
}
